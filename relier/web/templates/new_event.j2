{% extends 'base.j2' %}

{% block page %}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <form method='POST' action='/events/new/'>
                <div class="form-group">
                    <label for="exampleInputEmail1">Title</label>
                    <input type="email" class="form-control" name="title" placeholder="All Hands Meeting">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Date and Time</label>
                    <input type="text" class="form-control" name="datetime" placeholder="2015-03-31 8:30">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea class="form-control" name="description" rows="3" placeholder="At this event..."></textarea><br>
                </div>
                <div class="form-group">
                    <label>Video Source</label>
                    <select class="form-control" name="video_source">
                        <option value="youtube">YouTube</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Video ID</label>
                    <input type="text" class="form-control" name="video_id" placeholder="a5uQMwRMHcs">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Create Event</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
